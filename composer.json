{
    "name": "themsaid/ibis",
    "description": "Markdown to PDF book builder",
    "keywords": [
        "markdown",
        "book",
        "pdf",
        "php"
    ],
    "homepage": "https://github.com/themsaid/ibis",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohamed Said",
            "email": "themsaid@gmail.com"
        }
    ],
    "bin": [
        "ibis"
    ],
    "require": {
        "illuminate/filesystem": "^7.0|^8.0",
        "illuminate/support": "^7.0|^8.0",
        "php": "^7.3",
        "symfony/console": "^4.2|^5.0",
        "mpdf/mpdf": "^8.0",
        "spatie/commonmark-highlighter": "^2.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "phpunit/phpunit": "^9",
        "roave/security-advisories": "dev-latest",
        "smalot/pdfparser": "^v0.16",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Ibis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "csfix": [
            "php-cs-fixer fix src stubs tests --config=.php_cs"
        ],
        "csfix-review": [
            "php-cs-fixer fix src stubs tests --config=.php_cs --dry-run -v"
        ],
        "test": [
            "phpunit --testdox"
        ]
    },
    "scripts-descriptions": {
        "csfix": "Runs PHP CS Fixer to fix project files.",
        "csfix-review": "Runs PHP CS Fixer to show the details of which files are out of code standard.",
        "test": "Run PHPUnit with TestDox output."
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
